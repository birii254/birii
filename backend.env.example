# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
USE_SQLITE=False

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-domain.netlify.app

# Database (PostgreSQL for production)
DB_NAME=matrix_marketplace
DB_USER=matrix_marketplace_user
DB_PASSWORD=your-database-password
DB_HOST=your-database-host
DB_PORT=5432

# Cloudinary Configuration (Free tier available)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@matrixmarketplace.com

# Redis (Free tier available on Railway/Heroku)
REDIS_URL=redis://localhost:6379/0

# Allowed Hosts (for production)
ALLOWED_HOSTS=localhost,127.0.0.1,.render.com,your-backend-domain.onrender.com